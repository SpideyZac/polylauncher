{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PolyLauncher",
  "version": "0.0.1",
  "identifier": "com.spideyzac.polylauncher",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "PolyLauncher",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDgwM0RFMTc0NDRCQzM4MEYKUldRUE9MeEVkT0U5Z05MRjc4eGpVZUZiK2NxUFpDckF6eWhSbDNsS2owVkVJeWJlbEJ1U3hISDMK",
      "endpoints": [
        "https://github.com/SpideyZac/PolyLauncher/releases/latest/download/latest.json"
      ]
    }
  }
}
